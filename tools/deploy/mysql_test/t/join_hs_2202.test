select /*+ join(merge_join,merge_join)*/ * from persons full join orders on persons.id_p=orders.id_p left join t2 on t2.id=persons.id_p where persons.id_p=t2.id;

select /*+ join(bloomfilter_join)*/ * from persons,orders where  persons.id_p=orders.id_p;
select /*+ join(bloomfilter_join)*/ * from persons,orders,t2 where  persons.id_p=orders.id_p and persons.id_p=t2.id;
select /*+ join(bloomfilter_join)*/ * from persons left join orders on persons.id_p=orders.id_p where persons.id_p=orders.id_o;
select /*+ join(bloomfilter_join,bloomfilter_join)*/ * from persons left join orders on persons.id_p=orders.id_p right join t2 on t2.id=persons.id_p where persons.id_p=t2.id;
select /*+ join(bloomfilter_join,bloomfilter_join)*/ * from persons full join orders on persons.id_p=orders.id_p left join t2 on t2.id=persons.id_p where persons.id_p=t2.id;

