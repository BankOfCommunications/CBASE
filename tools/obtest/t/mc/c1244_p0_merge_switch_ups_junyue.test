deploy ob1=OBI(cluster=1244);
deploy ob2=OBI(cluster=1244);
deploy ob2.rs0.set master=ob1.rs0;

deploy ob1.reboot;
deploy ob2.reboot;
sleep 60;

# speed up merge
deploy ob1.mysql alter system set merge_delay_interval='1s' server_type=chunkserver;
deploy ob1.mysql alter system set merge_delay_for_lsync='1s' server_type=chunkserver;
deploy ob1.mysql alter system set min_drop_cache_wait_time='1s' server_type=chunkserver;
sleep 10;

deploy ob1.prepare s;

# new data
deploy ob1.create_client;
create table t1(c1 int primary key,c2 int);

# wait slave cluster cs create tablet
sleep 60;
insert into t1 values(1,1),(2,2),(3,3),(4,4);

# scan ups
select * from t1;

# merge
deploy ob1.major_freeze;


# switch master cluster ups
let $old_master=deploy_get_value(ob1.get_master_ups);

let $master_slave_ups=deploy_get_value(ob1.get_slave_ups);
deploy ob1.change_ups_master $master_slave_ups;

# check switch
let $new_master=deploy_get_value(ob1.get_master_ups);
if($new_master == $old_master)
{
    --echo switch master cluster ups fail
}

# switch slave cluster ups
let $old_master=deploy_get_value(ob2.get_master_ups);
let $slave_slave_ups=deploy_get_value(ob2.get_slave_ups);

deploy ob2.change_ups_master $slave_slave_ups;

let $new_master=deploy_get_value(ob2.get_master_ups);
if($new_master == $old_master)
{
    --echo switch slave cluster ups fail
}

sleep 15;

# new data
replace into t1 values(1,1),(2,2),(3,3),(4,4);
insert into t1 values(5,1),(6,2),(7,3),(8,4);
select * from t1;

deploy ob1.check_cs_version 2;
deploy ob2.check_cs_version 2;


# merge again
deploy ob1.major_freeze;

# check merge
deploy ob1.check_cs_version 3;

# check merge
deploy ob2.check_cs_version 3;

select * from t1;



